function recipe_search_search_for_terms() {
    global $base_url;
    $sql = "SELECT * FROM {taxonomy_term_data} ORDER BY name";
    $result = db_query($sql);

    $string = "<ul>";
    foreach ($result as $item) {
        $string .="<li><a href='".$base_url."/show_term_search/".$item->tid."'>$item->name</a></li>";
    }
    $string .="</ul>";

    return $string;

}
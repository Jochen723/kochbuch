    array_push($array, "Blatt");
    array_push($array, "Gramm");
    array_push($array, "Blatt");
    array_push($array, "Bund");
    array_push($array, "Stück");
    array_push($array, "EL");
    array_push($array, "ml");
    array_push($array, "Blatt");
    array_push($array, "TL");




    return $array;
}

function recipe_get_number() {
    $num = arg(1);
    return $num;
}

function recipe_add_more_ingredients() {
    $num = arg(1);
    $num = $num + 2;
    drupal_goto('/rezept_erstellen_zutaten/'.$num);
}


function recipe_overview_get_recipes2() {

    $recipes = array();

    $sql = "SELECT * FROM {recipe} as re INNER JOIN {node} as node ON re.nid = node.nid ORDER BY node.title";
    $result = db_query($sql);

    foreach ($result as $r) {
        array_push($recipes, $r->nid);
    }

    return $recipes;
}

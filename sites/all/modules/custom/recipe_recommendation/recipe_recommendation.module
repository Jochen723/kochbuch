function recipe_recommendation_recommend() {
    $node_id = arg(1);
    global $user;
    $heute = date("Y-m-d H:i:s");

    db_insert('recipe_recommendation')
        ->fields(array(
            'sender_id' => $user->uid,
            'recipe_id' => $node_id,
            'recommendation_date' => $heute,
        ))
        ->execute();

    drupal_set_message("Rezept wurde deinen Freunden empfohlen");
    drupal_goto("node/".$node_id);
}


